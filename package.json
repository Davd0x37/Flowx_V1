{
  "name": "flowx",
  "packageManager": "yarn@3.2.4",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "scripts": {
    "lint": "eslint",
    "format": "prettier --config .prettierrc.js --write \"**/*.{ts,tsx,html,scss,json,yml,md}\"",
    "web:dev": "yarn workspace web run dev"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/node": "^18.11.19",
    "eslint": "^8.33.0",
    "prettier": "^2.8.3",
    "typescript": "^4.9.4",
    "typescript-plugin-css-modules": "^4.1.1"
  }
}

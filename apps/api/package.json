{
  "name": "api",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev:ts-node": "node --loader ts-node/esm src/index.ts",
    "dev": "nodemon --exec \"node --loader @swc-node/register/esm\" ./src/index.ts",
    "knex:run": "NODE_OPTIONS='--loader ts-node/esm' knex --knexfile src/knexfile.ts",
    "migrate:currentVersion": "npm run knex:run -- migrate:currentVersion",
    "migrate:up": "npm run knex:run -- migrate:up",
    "migrate:list": "npm run knex:run -- migrate:list",
    "migrate:make": "npm run knex:run -- migrate:make --",
    "migrate:latest": "npm run knex:run -- migrate:latest --debug",
    "migrate:rollback": "npm run knex:run -- migrate:rollback --all --debug",
    "seed:make": "npm run knex:run -- seed:make --",
    "seed:run": "npm run knex:run -- seed:run --debug"
  },
  "devDependencies": {
    "@swc-node/register": "^1.6.6",
    "@types/node": "^20.4.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@fastify/helmet": "^11.0.0",
    "better-sqlite3": "^8.4.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.19.2",
    "fastify-plugin": "^4.5.0",
    "graphql": "^16.7.1",
    "graphql-yoga": "^4.0.3",
    "knex": "^2.5.0",
    "zod": "^3.21.4"
  }
}
